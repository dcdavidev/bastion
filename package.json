{
  "name": "root",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "bastion": "turbo build --filter=@dcdavidev/bastion-cli && ./bastion",
    "build": "turbo build",
    "build:server": "pnpm build --filter=bastion-server",
    "build:web": "pnpm build --filter @dcdavidev/bastion-web",
    "dev": "pnpm build --filter=bastion-server && turbo dev",
    "dev:server": "pnpm build:web && pnpm dev --filter=bastion-server",
    "dev:web": "pnpm build:web && pnpm dev --filter=bastion-web",
    "fmt": "pnpm dlx prettier --ignore-unknown --write .",
    "lint": "pnpm dlx eslint --no-warn-ignored --fix .",
    "lint:fmt": "pnpm run lint && pnpm run fmt",
    "prepare": "lefthook install",
    "release": "LEFTHOOK=\"0\" release-it"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@cspell/cspell-types": "^9.7.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@release-it/conventional-changelog": "^10.0.5",
    "@turbo/gen": "^2.8.10",
    "commitizen": "^4.3.1",
    "commitlint-config-spellbookx": "*",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.7.0",
    "cspell-config-spellbookx": "^0.10.0",
    "eslint": "^10.0.2",
    "eslint-plugin-spellbookx": "^0.10.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "prettier-config-spellbookx": "^0.10.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-properties": "^0.3.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "release-it": "^19.2.4",
    "turbo": "^2.8.11"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=24"
  }
}
