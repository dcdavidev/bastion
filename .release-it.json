{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": [
      "sed -i \"s/const Version = \\\".*\\\"/const Version = \\\"${version}\\\"/\" packages/core/version/version.go",
      "pnpm recursive exec -- pnpm version ${version} --allow-same-version --no-git-tag-version"
    ]
  }
}
